# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# PostgreSQL (production - recommended)
DATABASE_URL="postgresql://accountant:secure_password_change_me@localhost:5432/accountant_db?schema=public"

# SQLite (development only - not recommended for production)
# DATABASE_URL="file:./dev.db"

# ============================================================================
# ENVIRONMENT CONFIGURATION
# ============================================================================

# Node environment
NODE_ENV="production"

# dstack Socket Path (for TEE access in production)
DSTACK_SOCKET_PATH="/var/run/dstack.sock"

# ============================================================================
# CRITICAL SECURITY CONFIGURATION
# ============================================================================

# APP_NAMESPACE - CRITICAL for key derivation security!
# This value is used to generate unique private keys for each user.
# 
# WARNING: Changing this value will cause ALL users to receive different keys!
# - Each unique namespace creates a completely separate key space
# - Users in different namespaces will NEVER share keys
# - Default: "the-accountant-v1"
#
# Use cases for changing APP_NAMESPACE:
# 1. Running multiple independent deployments (prod, staging, dev)
# 2. Migrating to a new version where all users need new keys
# 3. Running multiple applications that should never share keys
#
# Format: alphanumeric with hyphens (e.g., "my-app-prod", "app-v2", "staging-2025")
APP_NAMESPACE="the-accountant-v1"

# ============================================================================
# Task Master AI Configuration
# ============================================================================

# API Keys (Required to enable respective provider)
ANTHROPIC_API_KEY="your_anthropic_api_key_here"       # Required: Format: sk-ant-api03-...
PERPLEXITY_API_KEY="your_perplexity_api_key_here"     # Optional: Format: pplx-...
OPENAI_API_KEY="your_openai_api_key_here"             # Optional, for OpenAI models. Format: sk-proj-...
GOOGLE_API_KEY="your_google_api_key_here"             # Optional, for Google Gemini models.
MISTRAL_API_KEY="your_mistral_key_here"               # Optional, for Mistral AI models.
XAI_API_KEY="YOUR_XAI_KEY_HERE"                       # Optional, for xAI AI models.
GROQ_API_KEY="YOUR_GROQ_KEY_HERE"                     # Optional, for Groq models.
OPENROUTER_API_KEY="YOUR_OPENROUTER_KEY_HERE"         # Optional, for OpenRouter models.
AZURE_OPENAI_API_KEY="your_azure_key_here"            # Optional, for Azure OpenAI models (requires endpoint in .taskmaster/config.json).
OLLAMA_API_KEY="your_ollama_api_key_here"             # Optional: For remote Ollama servers that require authentication.
GITHUB_API_KEY="your_github_api_key_here"             # Optional: For GitHub import/export features. Format: ghp_... or github_pat_...

# ============================================================================
# Attestation Upload Configuration
# ============================================================================

# Enable automatic upload of attestation quotes to Phala Cloud and t16z
# Phala Cloud provides a PUBLIC API - NO API KEY REQUIRED
ENABLE_ATTESTATION_UPLOAD="false"

# Phala Cloud API Configuration (optional, defaults work for most cases)
# Default: https://cloud-api.phala.network/api/v1
PHALA_CLOUD_API_URL="https://cloud-api.phala.network/api/v1"

# Attestation Upload Settings
ATTESTATION_UPLOAD_TIMEOUT="30000"  # Timeout in milliseconds for attestation uploads