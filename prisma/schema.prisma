// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String      @id @default(cuid())
  email     String      @unique
  userId    String      @unique
  pubKeyHex String      // Uncompressed public key (0x04... or compressed 0x02/0x03...)
  address   String      // Ethereum-style address (keccak of pubkey)
  createdAt DateTime    @default(now())
  auditLogs AuditLog[]  // One-to-many relationship with audit logs
  
  @@index([email])
  @@index([userId])
  @@index([address])
}

model AuditLog {
  id                   String   @id @default(cuid())
  userId               String   // User ID for the operation
  operation            String   // Operation type: signup, sign, verify
  attestationQuote     String?  // Hex-encoded attestation quote (SQLite TEXT can handle large strings)
  eventLog             String?  // Hex-encoded event log
  applicationData      String?  // JSON stringified application data
  address              String?  // Ethereum address at time of operation
  publicKey            String?  // Public key at time of operation
  message              String?  // Message that was signed (for sign operations)
  signature            String?  // Signature generated (for sign operations)
  attestationChecksum  String?  // SHA256 checksum of attestation quote
  phalaVerificationUrl String?  // Phala Cloud verification URL
  t16zVerificationUrl  String?  // t16z Explorer verification URL
  verificationStatus   String   @default("pending") // pending, verified, failed
  quoteUploadedAt      DateTime? // When quote was uploaded to cloud services
  createdAt            DateTime @default(now())
  
  // Relations
  user             User     @relation(fields: [userId], references: [userId], onDelete: Cascade)
  
  // Indexes for performance
  @@index([userId])
  @@index([operation])
  @@index([createdAt])
  @@index([userId, createdAt])
  @@index([attestationChecksum])
  @@index([verificationStatus])
}